@model EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <p><strong>Current Image:</strong></p>
    <img src="@Model.ImagePath" alt="Current Image" class="img-thumbnail" style="width: 150px; height: 150px;" />
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Email" type="hidden" />
    <input type="hidden" asp-for="Id" />
    <input asp-for="IsActive" type="hidden" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Department" class="form-label">Department</label>
                <select asp-for="Department" class="form-control">
                    <option value="">-- Select Department --</option>
                    @foreach (var deptName in (ViewBag.Department as List<string> ?? new List<string>()))
                    {
                        <option value="@deptName" selected="@(Model.Department == deptName)">@deptName</option>
                    }

                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Position" class="form-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group mb-3">
            <label asp-for="Image" class="form-label">Profile Picture</label>
            <input asp-for="Image" class="form-control" type="file" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div class="mt-2">
                <img src="@Model.ImagePath" alt="Employee Image" style="max-height: 150px;" />
            </div>
        }
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-success">Update Employee</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}